<Window x:Class="ChatAlerts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAlerts" xmlns:vm="clr-namespace:ChatAlerts.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <ListBox Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <ListBox Margin="30" FontSize="16" Grid.Row="0"/>
            <TextBox Grid.Row="1" Height="20" Width="80" HorizontalAlignment="Left" Margin="30 0"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Row="1" Margin="30 5">
                <TextBox Grid.Row="1" FontSize="16" Height="20" Width="480" />
                <Button Grid.Row="1" Content="Отправить" Height="20" Width="80" />
            </StackPanel>
        </Grid>
        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="3" Background="LightGray"/>
    </Grid>
</Window>
