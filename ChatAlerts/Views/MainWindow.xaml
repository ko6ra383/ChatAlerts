<Window x:Class="ChatAlerts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAlerts" xmlns:vm="clr-namespace:ChatAlerts.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Background="#2E2E2E">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" ItemsSource="{Binding testlist}" FontSize="20" Style="{StaticResource GroupsTemplate}">
            <ListBox.Resources>
                
            </ListBox.Resources>
        </ListBox>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <ListBox  FontSize="16" Grid.Row="0" ItemsSource="{Binding testlist}" Style="{StaticResource GroupsTemplate}" ItemContainerStyle="{StaticResource GroupsItemTemplate}">
                <ListBox.Resources>
                    
                </ListBox.Resources>
            </ListBox>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Row="1" Margin="30 5">
                <TextBox x:Name="msgString" Grid.Row="1" FontSize="16" Height="20" Width="480"/>
                <Button Grid.Row="1" Content="Отправить" Height="20" Width="80" Command="{Binding SendMessageCommand}" CommandParameter="{Binding Path=Text, ElementName=msgString}"/>
            </StackPanel>
        </Grid>
        <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="3" Background="LightGray"/>
    </Grid>
</Window>
